@model WebApplication1.Models.Photos
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor Accessor;
@using WebApplication1.Controllers



@{
    ViewData["Titlea"] = "Index";
}
<section class="vh-100" ">
    <div class="container py-5 h-100">

        <div class="col col-md-9 col-lg-7 col-xl-5">

            <div class="card-body p-4">
                <div class="d-flex text-black">
                    <div class="flex-shrink-0">
                        <img src="https://cdn.pixabay.com/photo/2018/11/13/21/43/avatar-3814049_1280.png"
                             alt="Generic placeholder image" class="img-fluid"
                             style="width: 180px; border-radius: 10px;">
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h5 class="mb-1">@Accessor.HttpContext.Session.GetString("UserName")</h5>
                        <p class="mb-2 pb-1" style="color: #2b2a2a;">Artist</p>
                        <div class="d-flex justify-content-start rounded-3 p-2 mb-2"
                             style="background-color: #efefef;">
                            <div>
                                <p class="small text-muted mb-1">Articles</p>
                                <p class="mb-0">41</p>
                            </div>
                            <div class="px-3">
                                <p class="small text-muted mb-1">Followers</p>
                                <p class="mb-0">976</p>
                            </div>
                            <div>
                                <p class="small text-muted mb-1">Rating</p>
                                <p class="mb-0">8.5</p>
                            </div>
                        </div>
                        <div class="d-flex pt-1">
                            <button type="button" class="btn btn-outline-primary me-1 flex-grow-1">Chat</button>
                            <button type="button" class="btn btn-primary flex-grow-1">Follow</button>
                        </div>
                    </div>
                </div>
            </div>



    @using (Html.BeginForm("Create", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label">Image Files</label>
                <input asp-for="ImageFile" type="file" accept="image/*" multiple name="imageFiles" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div id="image-metadata"></div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary flex-grow-1" value="Create">Create</button>
            </div>
    }


            <div />
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
            }


        </div>
    </div>
</section>